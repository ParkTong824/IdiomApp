<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000"
    android:clickable="true"
    tools:context=".ui.PlayQuizFragment">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:text="전체문제 개수 (숫자)"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text=" / "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="푼 문제 개수 (숫자)"
            android:textColor="#B2FF59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/quiz_textView"
        android:fontFamily="@font/nanumsquareroundb"
        android:text="肝膽相照"
        android:textSize="60sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="300dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/quiz_menu_1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/nanumsquareroundr"
        android:textColor="#ffffff"
        android:text="테스트용"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="#64FFDA"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quiz_menu_2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/nanumsquareroundr"
        android:textColor="#ffffff"
        android:text="테스트용"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="#64FFDA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quiz_menu_3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/nanumsquareroundr"
        android:textColor="#ffffff"
        android:text="테스트용"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="#64FFDA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quiz_menu_4"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/nanumsquareroundr"
        android:textColor="#ffffff"
        android:text="간담상조"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="#64FFDA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>